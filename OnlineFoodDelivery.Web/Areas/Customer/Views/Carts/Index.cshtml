@* @model OnlineFoodDelivery.Web.ViewModels.CartItemViewModel *@
@{
    ViewData["Title"] = "Your Cart";
}
@model List<OnlineFoodDelivery.Web.ViewModels.CartItemViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #343a40; /* Dark background color */
            color: #fff; /* Light text color */
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .table {
            margin-bottom: 30px;
            background-color: #495057; /* Darker background color for table */
            color: #fff; /* Light text color for table */
        }

            .table th,
            .table td {
                border-color: #dee2e6; /* Light border color */
            }

        .btn-update {
            background-color: #28a745; /* Green update button */
            color: white;
        }

        .btn-remove {
            background-color: #dc3545; /* Red remove button */
            color: white;
        }

        .total-amount {
            font-size: 24px;
            font-weight: bold;
            color: #28a745; /* Green total amount text */
        }

        .btn-proceed {
            background-color: #007bff; /* Blue proceed button */
            color: white;
        }

        .btn-proceed:hover {
                background-color: #0056b3; /* Darker blue on hover */
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center">Your Cart</h2>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Item.Title</td>
                            <td>₹@item.Item.Price</td>
                            <td>
                                <form asp-action="UpdateQuantity" asp-controller="Carts">
                                    <input type="hidden" name="PId" value="@item.Item.Id" />
                                    <input type="number" name="Quantity" value="@item.Quantity" min="1" />
                                    <button type="submit" class="btn btn-update">Update</button>
                                </form>
                            </td>
                            <td>₹@(item.Item.Price * item.Quantity)</td>
                            <td>
                                <a href="@Url.Action("RemoveFromCart","Carts",new{@PId = item.Item.Id})" class="btn btn-remove">Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-right"><h4>Total Amount:</h4></td>
                        <td colspan="2"><h4 class="total-amount">₹@(Model.Sum(item => item.Item.Price * item.Quantity))</h4></td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="text-center">
            <a href="@Url.Action("Checkout", "Carts")" class="btn btn-proceed">Proceed to Checkout</a>
        </div>
    </div>
</body>
</html>
