<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Mood Suggestions</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #343a40; /* Dark background color */
            color: #fff; /* Light text color */
        }

        .container1 {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #495057; /* Darker container background color */
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.1); /* White shadow */
            text-align: center; /* Center align content */
        }

        h1 {
            color: #fff; /* White heading color */
            margin-bottom: 20px; /* Add spacing below heading */
        }

        .mood-buttons {
            display: flex;
            justify-content: center;
            margin-bottom: 20px; /* Add spacing below buttons */
            height: 100px;
        }
        .happyspan{
            display:none;
        }
        .happyspan:hover{
            display:inline;
        }
        .happy {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #edf2f4; /* Green button color */
            color: #000; /* White text color */
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin: 0 10px; /* Add margin between buttons */
            transition: all 0.3s ease; /* Smooth transition on hover */
        }
        .happy:hover {
            transform:scale(1.3);
                background-color: #a0c4ff;
        }
        .happy:hover .happyspan{
            display:block;
        }
        .sad {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #edf2f4; /* Green button color */
            color: #000; /* White text color */
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin: 0 10px; /* Add margin between buttons */
            transition: all 0.3s ease; /* Smooth transition on hover */
        }

        .sad:hover {
            transform: scale(1.3);
            background-color: #ddbea9;
        }

            .sad:hover .happyspan {
                display: block;
            }
        .stressed {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #edf2f4; /* Green button color */
            color: #000; /* White text color */
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin: 0 10px; /* Add margin between buttons */
            transition: all 0.3s ease; /* Smooth transition on hover */
        }

        .stressed:hover {
            transform: scale(1.3);
                background-color: #e4c1f9;
        }

        .stressed:hover .happyspan {
            display: block;
        }
        .excited {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #edf2f4; /* Green button color */
            color: #000; /* White text color */
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin: 0 10px; /* Add margin between buttons */
            transition: all 0.3s ease; /* Smooth transition on hover */
        }

        .excited:hover {
            transform: scale(1.3);
                background-color: #48cae4;
        }

        .excited:hover .happyspan {
            display: block;
        }
        .hungry {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #edf2f4; /* Green button color */
            color: #000; /* White text color */
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin: 0 10px; /* Add margin between buttons */
            transition: all 0.3s ease; /* Smooth transition on hover */
        }

        .hungry:hover {
            transform: scale(1.3);
                background-color: #f28482;
        }

        .hungry:hover .happyspan {
            display: block;
        }
        .result {
            text-align: center;
        }

            .result h2 {
                color: #fff; /* White heading color */
                margin-bottom: 10px; /* Add spacing below heading */
                font-size: 24px; /* Larger font size */
                font-weight: bold; /* Bold font weight */
            }

            .result p {
                color: #ccc; /* Lighter paragraph color */
                margin: 0; /* Remove default margin */
                font-size: 30px; /* Larger font size */
            }
    </style>
</head>
<body>
    <div class="container1">
        <h1>Food Mood Suggestions</h1>
        <div class="mood-buttons">
            <button class="happy" onclick="getSuggestions('happy')"><span class="happyspan">Happy</span>
                <img width="64" height="64" src="https://img.icons8.com/dusk/64/happy.png" alt="happy" />
            </button>
            <button class="sad" onclick="getSuggestions('sad')"><span class="happyspan">Sad</span>
                <img width="64" height="64" src="https://img.icons8.com/dusk/64/sad.png" alt="sad" />
            </button>
            <button class="hungry" onclick="getSuggestions('hungry')"><span class="happyspan">Hungry</span>
                <img width="64" height="64" src="https://img.icons8.com/arcade/64/hungry.png" alt="hungry" />
            </button>
            <button class="excited" onclick="getSuggestions('excited')"><span class="happyspan">Excited</span>
                <img width="64" height="64" src="https://img.icons8.com/emoji/64/star-struck.png" alt="star-struck" />
            </button>
            <button class="stressed" onclick="getSuggestions('stressed')"><span class="happyspan">Stressed</span>
                <img width="64" height="64" src="https://img.icons8.com/emoji/64/fearful-face.png" alt="fearful-face" />
            </button>
        </div>
        <div class="result" id="suggestions">
            <!-- Suggestions will be displayed here -->
        </div>
    </div>

    <script>
        function getSuggestions(mood) {
            var suggestions = document.getElementById('suggestions');

            // You can implement your logic to fetch food suggestions based on mood here
            // For demo, let's just display a set of predefined messages
            var messages = [];
            switch (mood) {
                case 'happy':
                    messages = ["How about blueberry cheese cake?", "How about tiramisu tub?", "Maybe cappuccino?"];
                    break;
                case 'sad':
                    messages = ["Maybe some comfort food like pizza?", "How about a warm bowl of soup?", "How about paneer butter masala!"];
                    break;
                case 'hungry':
                    messages = ["A hearty burger might do the trick!", "How about a big bowl of pasta?", "Maybe some enchiladas?"];
                    break;
                case 'excited':
                    messages = ["Treat yourself with some pizza!", "How about a fancy dinner?", "Maybe quesadilla?"];
                    break;
                case 'stressed':
                    messages = ["Relax with some coffee!", "How about a cup of cappuccino?", "Maybe a soothing bowl of soup"];
                    break;
                default:
                    messages = ["Hmm... something went wrong. Please try again later."];
            }

            var currentIndex = 0;
            var interval = setInterval(function () {
                suggestions.innerHTML = '<h2>Recommended Food:</h2><p>' + messages[currentIndex] + '</p>';
                currentIndex = (currentIndex + 1) % messages.length;
            }, 80); // Change suggestion every 2 seconds

            // Stop changing suggestions after 10 seconds (10 * 1000 milliseconds)
            setTimeout(function () {
                clearInterval(interval);
                suggestions.innerHTML = '<h2>Recommended Food:</h2><p>' + messages[currentIndex] + '</p>';
            }, 3000); // Display final suggestion after 10 seconds
        }
    </script>
</body>
</html>
