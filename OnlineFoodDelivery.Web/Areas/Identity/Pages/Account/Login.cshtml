<style>
    /* CSS Styles */
    body {
        background-color: #343a40;
        color: #fff;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-form {
        max-width: 400px;
        padding: 20px;
        background-color: #495057;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }

    .form-floating {
        position: relative;
        margin-bottom: 1rem;
    }

        .form-floating input {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ced4da;
            border-radius: 5px;
            background-color: #666;
            color: #fff;
        }

            .form-floating input:focus {
                background-color: #666;
            }

        .form-floating label {
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            transition: all 0.3s;
            pointer-events: none;
            font-size: 16px;
            color: #ced4da;
        }

        .form-floating input:focus + label,
        .form-floating input:not(:placeholder-shown) + label {
            top: 0;
            font-size: 12px;
            color: #ff7f50; /* Orange color */
        }

    .btn-primary {
        background-color: #ff7f50; /* Orange color */
        border: none;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #cc6f3c; /* Darker orange color */
        }

    .btn-register {
        background-color: #fff;
        border: 1px solid #ff7f50; /* Orange color */
        color: #ff7f50; /* Orange color */
    }

        .btn-register:hover {
            background-color: #fff; /* Orange color */
            color: #ff7f50;
        }

    .link {
        color: #ff7f50; /* Orange color */
        text-decoration: none;
    }

        .link:hover {
            text-decoration: none;
            color: white;
        }
</style>

<div class="login-container">
    <div class="login-form">
        <form id="account" method="post">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder=" " />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder=" " />
                <label asp-for="Input.Password" class="form-label">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="checkbox mb-3">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="w-100 btn btn-lg btn-register mt-3">Register as a new user</a>
            </div>
            <div class="mt-3 text-center">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="link">Forgot your password?</a>
                </p>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
