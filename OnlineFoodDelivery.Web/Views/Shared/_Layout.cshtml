@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Foodiezz</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineFoodDelivery.Web.styles.css" asp-append-version="true" />
    <style>
        /* Custom Dark Theme Styles */
        body {
            background-color: #343a40;
            color: #fff;
        }

        .navbar {
            background-color: #212529 !important;
        }

        .navbar-light .navbar-nav .nav-link {
            color: #fff !important;
        }

            .navbar-light .navbar-nav .nav-link:hover {
                color: #fff !important;
            }

        .navbar-light .navbar-brand {
            color: #fff !important;
        }

        .navbar-light .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3e%3cpath stroke='rgba(255, 255, 255, 0.5)' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e") !important;
        }

        .footer {
            background-color: #212529;
            color: #fff;
        }

        .form-control {
            background-color: #495057;
            border-color: #495057;
            color: #fff;
        }

            .form-control:focus {
                background-color: #495057;
                border-color: #495057;
                color: #fff;
            }

        .btn-primary {
            background-color: #ff7f50;
            border-color: #ff7f50;
            color: #fff;
        }

            .btn-primary:hover {
                background-color: #cc6f3c;
                border-color: #cc6f3c;
                color: #fff;
            }

        .nav-link {
            color: #fff !important;
        }

            .nav-link:hover {
                color: #ff7f50 !important;
            }

        .link {
            color: #ff7f50;
            text-decoration: none;
        }

            .link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Customer" asp-controller="Homes" asp-action="Home">Foodiezz</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Homes" asp-action="Home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Homes" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (UserManager.GetUserName(User) == "admin@gmail.com")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="categories" asp-action="Index">Category</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="SubCategories" asp-action="Index">SubCategory</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Items" asp-action="Index">Item(Admin)</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Users" asp-action="Index">Users</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Homes" asp-action="Index">Items</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Carts" asp-action="Index">
                                Cart
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Foodiezz - <a asp-area="Customer" asp-controller="Homes" asp-action="Privacy" class="text-muted" style="text-decoration:none;">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

